# Production Environment Variables
# Copy this file to .env in production and update with your actual values

# OpenAI API Key (required for agent conversations)
OPENAI_API_KEY=your_openai_api_key_here

# Database Configuration
# Use a hosted PostgreSQL database like Neon, Supabase, or Railway
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://username:password@host:5432/vibecorp_production

# API Configuration
PORT=8000
HOST=0.0.0.0

# CORS Configuration (add your frontend domain)
ALLOWED_ORIGINS=https://your-frontend-domain.vercel.app

# Security
# Set to "production" to disable debug logging
ENVIRONMENT=production 